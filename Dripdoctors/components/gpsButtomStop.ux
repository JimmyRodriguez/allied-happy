<Panel Margin="20" Padding="20" Alignment="Center">
	<Rectangle Width="150" Height="40" Layer="Background" Fill="#000" CornerRadius="8" />
	<Button Width="150" Height="40" Text="Stop Service" Clicked="{{stopContinuousListener}}">
		<DropShadow/>
	</Button>
	<WhilePressed >
		<Scale
			Factor=".9"
			Duration=".1"
			Easing="BounceOut"
			EasingBack="BounceIn"/>		
	</WhilePressed>
</Panel>

